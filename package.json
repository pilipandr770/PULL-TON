{
  "name": "community-ton-pool",
  "version": "1.0.0",
  "description": "A decentralized TON staking pool with zero fees - Community Pool",
  "main": "index.js",
  "scripts": {
    "build": "npx tact ./contracts/CommunityTonPool.tact --output ./build",
    "deploy:testnet": "npx ts-node scripts/deploy.ts testnet",
    "deploy:mainnet": "npx ts-node scripts/deploy.ts mainnet",
    "info": "npx ts-node scripts/interact.ts testnet info",
    "deposit": "npx ts-node scripts/interact.ts testnet deposit",
    "withdraw": "npx ts-node scripts/interact.ts testnet withdraw",
    "balance": "npx ts-node scripts/interact.ts testnet balance"
  },
  "keywords": ["ton", "staking", "pool", "defi", "tact"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tact-lang/compiler": "^1.6.13",
    "@ton/core": "^0.62.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^16.1.0",
    "@types/node": "^24.10.1",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
